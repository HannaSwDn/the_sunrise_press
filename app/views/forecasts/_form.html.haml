= form_for @forecast do |f|
  - if @forecast.errors.any?
    #error_explanation
      %h2= "#{pluralize(@forecast.errors.count, "error")} prohibited this forecast from being saved:"
      %ul
        - @forecast.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :lng
    = f.text_field :lng
  .actions
    = f.submit 'Save'
